<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TouchPointAnimated"
             Title="Touch Point Animated"
             x:Class="TouchPointAnimated.MainPage">

    <StackLayout Padding="10,20,10,10">
        
        <Label
            Margin="0,10,0,10"
            FontSize="Medium"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="An Animated Touch Point with SkiaSharp" />

        <Button
            x:Name="HeartBeatEffectTouchPointPageButton"
            BackgroundColor="OrangeRed"
            Clicked="HeartBeatEffectTouchPointPageButton_Clicked"
            HorizontalOptions="FillAndExpand"
            Text="Heart Beat Effect Touch Point"
            TextColor="White" />

        <Button
            x:Name="RippleEffectTouchPointPageButton"
            BackgroundColor="OrangeRed"
            Clicked="RippleEffectTouchPointPageButton_Clicked"
            HorizontalOptions="FillAndExpand"
            Text="Ripple Effect Touch Point"
            TextColor="White" />

    </StackLayout>

</ContentPage>